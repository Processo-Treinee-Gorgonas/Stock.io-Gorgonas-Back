generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id Int @id @default(autoincrement())
  userName String @db.VarChar(50) @unique
  nome String @db.VarChar(255)
  email String @db.VarChar(255) @unique
  senhaHash String @db.VarChar(255)
  fotoPerfil String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lojas Lojas[]
}

model Lojas {
  id Int @id @default(autoincrement())
  usuarioId Int
  categoriaId Int
  nome String @db.VarChar(255) @unique
  descricao String @db.Text
  logo String?
  banner String?
  sticker String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario Usuarios @relation(fields: [usuarioId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  categoria Categorias @relation(fields: [categoriaId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Categorias {
  id Int @id @default(autoincrement())
  nome CategoriasNome @unique
  lojas Lojas[]
  subcategorias Subcategorias []
}

enum CategoriasNome{
  MERCADO
  FARMACIA
  BELEZA
  MODA
  ELETRONICOS
  JOGOS
  BRINQUEDOS
  CASA
}

model Subcategorias{
  id Int @id @default(autoincrement())
  nome String @db.VarChar(100)
  categoriaId Int
  categoria Categorias @relation(fields: [categoriaId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@unique([nome, categoriaId])
}

